<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_nota_id"
    layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_marginTop="0.1pt"

    android:layout_marginBottom="0.1pt"
    app:cardCornerRadius="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">/>

        <TextView
            android:id="@+id/idalunonota_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="id"
            android:textColor="#222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nomealuno_frequencia_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:text="nomeAluno"
            android:textColor="#222"
            android:textSize="14sp"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/presenca_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPrimary" />

    </LinearLayout>
</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ui.activities.LoadingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="Bem Vindo ao EducarApp"
        android:textColor="@color/colorPrimary"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textocarregamento_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center|bottom"
        android:text="Carregando seus dados, aguade..."
        android:textColor="#fff"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progresbar_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:padding="30dp" />

    <ImageView
        android:id="@+id/botao_acessar_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@id/progresbar_loading"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arrow_right_drop_circle"
        android:visibility="invisible"
        android:text="acessar" />

</RelativeLayout>
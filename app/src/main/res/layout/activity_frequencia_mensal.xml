<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".ui.activities.FrequenciaMensalActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_unidade_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/colorEdit"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:padding="5dp">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/calendar_week" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Turma"
                        android:textColor="@color/colorTextTabs"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/turma2_notificacoes_aluno_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="turma"
                        android:textColor="@color/colorTextTabs"
                        android:textSize="13sp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:background="@drawable/book_open" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Disciplina"
                        android:textColor="@color/colorTextTabs"
                        android:textSize="13sp"></TextView>

                    <TextView
                        android:id="@+id/disciplina2_notificacao_aluno_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="disciplina"
                        android:textColor="@color/colorTextTabs"
                        android:textSize="13sp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
            android:background="@drawable/user" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center|left"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluno"
                android:textColor="@color/colorTextTabs"
                android:textSize="13sp"></TextView>

            <TextView
                android:id="@+id/aluno2_notificacoes_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="aluno"
                android:textColor="@color/colorTextTabs"
                android:textSize="13sp"
                android:textStyle="bold"></TextView>
        </LinearLayout>
    </LinearLayout>


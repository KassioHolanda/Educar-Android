<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.activities.LoginActivity">

    <!--<ImageView-->
    <!--android:background="@drawable/logologin"-->
    <!--android:layout_width="200dp"-->
    <!--android:layout_marginBottom="30dp"-->
    <!--android:layout_height="150dp" />-->


    <TextView
        android:id="@+id/logo_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:padding="30dp"
        android:text="E - Ducar"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="50sp" />

    <EditText
        android:id="@+id/cpf_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_id"
        android:layout_marginBottom="2dp"
        android:background="@drawable/borda_arredondada"
        android:hint="CPF"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/senha_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cpf_login_id"
        android:layout_marginBottom="16dp"
        android:background="@drawable/borda_arredondada"
        android:hint="Senha "
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="@color/colorPrimary"
        android:textSize="16sp" />

    <Button
        android:id="@+id/acessar_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senha_login_id"
        android:background="@drawable/borda_arredondada_botao"
        android:text="Acessar"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/bar_loading_login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_id"
        android:visibility="invisible"/>

</RelativeLayout>
